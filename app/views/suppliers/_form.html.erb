<% if @supplier.errors.any? %>
  <div class="row">
    <span>Verifique os campos abaixo:</span>
    <ul>
      <% @supplier.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <%= form_with(model: @supplier) do |form| %>
    <div class="form-group row">
      <div class="col-sm">
        <b><%= form.label :fantasy_name, 'Nome Fantasia' %></b>
        <%= form.text_field :fantasy_name, class: 'form-control' %>
      </div>
      <div class="col-sm">
        <b><%= form.label :eni, 'CNPJ' %></b>
        <%= form.text_field :eni, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm">
        <b><%= form.label :legal_name, 'Razão Social' %></b>
        <%= form.text_field :legal_name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm">
        <b><%= form.label :address, 'Endereço' %></b>
        <%= form.text_field :address, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm">
        <b><%= form.label :email, 'E-mail' %></b>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
      <div class="col-sm">
        <b><%= form.label :phone, 'Telefone' %></b>
        <%= form.text_field :phone, class: 'form-control' %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <%= form.submit 'Gravar', class: 'btn btn-success' %>
    </div>
    <br>
  <% end %>
</div>