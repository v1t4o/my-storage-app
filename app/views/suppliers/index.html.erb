<div class="row">
  <h2>Fornecedores cadastrados</h2>
</div>
<%= form_with url: suppliers_path, method: :get do %>
  <div class="form-group row">
    <div class="col-auto" style="padding-top:0.3rem;">
      <b><%= label_tag :term, 'Busca:' %></b>
    </div>
    <div class="col-sm">
      <%= text_field_tag :term, {}, {class: 'form-control', placeholder: 'Digite o nome do fornecedor ou parte dele'} %>
    </div>
    <div class="col-auto">
      <%= submit_tag 'Filtrar', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
<% if @suppliers.empty? %>
  <div class="row">
    <strong style="color:red;">Nenhum fornecedor cadastrado</strong>
  </div>
<% end %>
<div class="row">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Nome Fantasia</th>
        <th scope="col">CNPJ</th>
        <% if user_signed_in? %><th scope="col">Ações</th><% end %>
      </tr>
    </thead>
    <tbody>
      <% @suppliers.each do |supplier| %>
        <tr>
          <td><%= link_to(supplier.fantasy_name, supplier_path(supplier.id)) %></td>
          <td><%= supplier.eni %></td>
          <td><%= link_to 'Editar', edit_supplier_path(supplier.id), {id: "edit-#{supplier.id}", class: 'btn btn-warning'} if user_signed_in? %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>