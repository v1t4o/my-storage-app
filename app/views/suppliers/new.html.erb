<h2>Novo fornecedor</h2>

<% if @supplier.errors.any? %>
  <span>Verifique os campos abaixo:</span>
  <ul>
    <% @supplier.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with(model: @supplier) do |form| %>
  <div>
    <%= form.label :fantasy_name, 'Nome Fantasia' %>
    <%= form.text_field :fantasy_name %>
  </div>
  <div>
    <%= form.label :legal_name, 'Razão Social' %>
    <%= form.text_field :legal_name %>
  </div>
  <div>
    <%= form.label :eni, 'CNPJ' %>
    <%= form.text_field :eni %>
  </div>
  <div>
    <%= form.label :address, 'Endereço' %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label :email, 'E-mail' %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :phone, 'Telefone' %>
    <%= form.text_field :phone %>
  </div>
  <%= form.submit 'Gravar' %>
<% end %>