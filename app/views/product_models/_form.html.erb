<% if @product_model.errors.any? %>
  <div class="row">
    <span>Verifique os campos abaixo:</span>
    <ul>
      <% @product_model.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <%= form_with(model: @product_model) do |form| %>
    <div class="form-group row">
      <div class="col-sm">
        <b><%= form.label :name, 'Nome' %></b>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="col-sm">
        <b><%= form.label :weight, 'Peso' %></b>
        <%= form.text_field :weight, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm">
        <b><%= form.label :height, 'Altura' %></b>
        <%= form.text_field :height, class: 'form-control' %>
      </div>
      <div class="col-sm">
        <b><%= form.label :width, 'Largura' %></b>
        <%= form.text_field :width, class: 'form-control' %>
      </div>
      <div class="col-sm">
        <b><%= form.label :length, 'Profundidade' %></b>
        <%= form.text_field :length, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm">
        <b><%= form.label :supplier_id, 'Fornecedor' %></b>
        <%= form.collection_select(:supplier_id, Supplier.all, :id, :fantasy_name, {}, class: 'form-control') %>
      </div>
      <div class="col-sm">
        <b><%= form.label :category_id, 'Categoria' %></b>
        <%= form.collection_select(:category_id, Category.all, :id, :name, {}, class: 'form-control') %>
      </div>
      <div class="col-sm">
        <b><%= form.label :status, 'Status' %></b>
        <%= form.select(:status, options_for_select([['Ativo', :active], ['Inativo', :inactive]]), {}, class: 'form-control') %>
      </div>
    </div>
    <br>
    <div class="form-group">
      <%= form.submit 'Gravar', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>